---
import { ClientRouter } from 'astro:transitions';
import { siteInfo} from 'src/consts/site-info';
import NavBar  from 'src/components/shared/NavBar.astro';
interface Props {
	title?:string;
	image?:string;
	description?:string;
};
const {title=siteInfo.title,description=siteInfo.description,image}=Astro.props;

---



<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<meta name="descripcion" content={description}>
		<meta name="author" content={'DanielCR16'}>
		<!-- OG METATAG -->
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:image" content={image}>

		<title>{title}</title>
		<ClientRouter/>
	</head>
	<body class="bg-slate-800 text-slate-100  flex flex-col min-h-screen">
		<NavBar/>
		<main class="mt-10 mx-auto flex-grow w-full max-w-4xl px-4">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
